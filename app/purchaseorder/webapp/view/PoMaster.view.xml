<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="sp.fiori.purchaseorder.controller.PoMaster">
	<Page id="_IDGenPage1" title="Purchase Orders" titleAlignment="Center">
		<SearchField id="searchFieldId" width="100%" search="onSearch" placeholder="Search" showRefreshButton="true"/>
		<content>
			<List id="masterListId" mode="SingleSelectMaster" growing="true" growingThreshold="20" growingScrollToLoad="true"
				selectionChange="onListItemPress">
				<items>
					<ObjectListItem class="purchaseOrder" id="listItemTemp" title="{Po_No}" type="Active" number="{Status}" numberState="Warning">
						<attributes>
							<ObjectAttribute id="_IDGenObjectAttribute1" title="Plant" text="{Plant}"/>
							<ObjectAttribute id="_IDGenObjectAttribute2" text="{Plant_Desc}"/>
						</attributes>
						<firstStatus>
							<ObjectStatus id="_IDGenObjectStatus1" text="{path:'Po_Date', formatter:'sp.fiori.purchaseorder.controller.formatter.formatDate'}"/>
						</firstStatus>
						<secondStatus>
						   <ObjectStatus id="_IDGenObjectStatus2" text="{UpdatedBy}"/>
						</secondStatus>
					</ObjectListItem>
				</items>
			</List>
		</content>
		<footer>
			<Bar id="_IDGenBar1">
				<contentLeft>
					<Button id="FilterId" visible="true" icon="sap-icon://filter" press="onFilter" type="Emphasized"/>
					<Button id="clearFilterId" visible="false" icon="sap-icon://clear-filter" press="onFilterClear" type="Emphasized"/>
				</contentLeft>
			</Bar>
		</footer>
	</Page>
</mvc:View>