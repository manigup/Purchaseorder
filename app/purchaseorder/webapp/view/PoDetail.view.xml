                                            id="freightId"
                                            text="{path:'detailModel>Frieght',formatter:'sp.fiori.purchaseorder.controller.formatter.formatAmount'}"
                                            wrapping="false"
                                        />
                                        <Text
                                            id="othchargeId"
                                            text="{path:'detailModel>OtherCharges',formatter:'sp.fiori.purchaseorder.controller.formatter.formatAmount'}"
                                            wrapping="false"
                                        />
