                    <!-- text="{detailHeaderModel>/PoDate}"/> -->
                    <!-- <ObjectStatus id="_IDGenObjectStatus2" text="{detailModel>/PoType}" state="Success"/> -->
                </statuses>
            </ObjectHeader>
