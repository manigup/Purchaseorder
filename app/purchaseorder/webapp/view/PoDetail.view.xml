			<IconTabBar id="_IDGenIconTabBar1">
				<items>
					<IconTabFilter id="_IDGenIconTabFilter1" icon="sap-icon://approvals" text="Items">
						<Table id="DeliveryTableId" class="sapUiSizeCompact" items="{detailModel>/headertoitemNav/results}" itemPress="onItempress"
							fixedLayout="false">
							<headerToolbar>
								<Toolbar id="_IDGenToolbar1">
									<Title id="_IDGenTitle1" text="Items"/>
								</Toolbar>
							</headerToolbar>
							<columns>
								<Column id="_IDGenColumn1" minScreenWidth="Tablet" demandPopin="true">
									<Text id="_IDGenText1" text="Item No"/>
								</Column>
								<Column id="_IDGenColumn2" minScreenWidth="Tablet" demandPopin="true">
									<Text id="_IDGenText2" text="Material"/>
