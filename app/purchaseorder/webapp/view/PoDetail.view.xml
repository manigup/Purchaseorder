										<!-- <Text id="_IDGenText13" width="7em" text="{path:'detailModel>Delivery_Date', formatter:'sp.fiori.purchaseorder.controller.formatter.formatDate'}"/> -->
										<ObjectNumber id="_IDGenObjectNumber1" number="{detailModel>PoQty}" />
										<!--numberUnit="{detailModel>Uom}" press="onQuantityPress"/>-->
										<ObjectNumber id="_IDGenObjectNumber2" number="{detailModel>BalanceQty}" />
										<!--numberUnit="{detailModel>Uom}" press="onConfQuantityPress"/>-->
										<ObjectNumber id="_IDGenObjectNumber3" number="{detailModel>DeliveredQty}" />
										<!-- unit="{detailModel>Uom}"/> -->
										<Text id="_IDGenText14" text="{detailModel>UnitPrice}"/>
										<!--press="onAmountPress"/>-->
										<ObjectStatus id="_IDGenObjectStatus3" text=""/>
										<!-- text="{detailModel>Confirm_Status}" state="{path:'detailModel>Confirm_Status',formatter:'sp.fiori.purchaseorder.controller.formatter.statusCheck'}"/> -->
